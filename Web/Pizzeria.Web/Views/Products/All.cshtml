@model AllProductsQueryModel



<form method="get">
    <div class="row">

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Category" class="form-label">Select Category</label>
                <select asp-for="Category" class="form-select">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Category" class="form-label">Select Size</label>
                <select asp-for="Category" class="form-select">
                    <option value="">All</option>
                    @foreach (var size in Model.Sizes)
                    {
                        <option value="@size.Name">@size.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4 mt-2">
            <div class="form-group">
                <label asp-for="SearchTerm"></label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Pizza, Doner, Sauce etc..">
            </div>
        </div>

        <div class="form-group col-md-4 mt-3">
            <div class="form-group">
                <label asp-for="Sorting" class="form-label">Sort By</label>
                <select asp-for="Sorting" class="form-select">
                    <option value="0">Alphabetical Order</option>
                    <option value="1">Price Ascending</option>
                    <option value="2">Price Descending</option>
                </select>
            </div>
        </div>
    </div>
</form>

<div class="card-group">
    @foreach (var item in Model.Products)
    {
        <div class="card" style="margin:60px">
            <img src="@item.ImageUrl" class="card-img-top" alt="img">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
            </div>
        </div>
    }
</div>

@{
    var totalPages = Math.Ceiling((double)Model.TotalProducts / AllProductsQueryModel.ProductsPerPage);

    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var nextPage = Model.CurrentPage + 1;
    if (nextPage > totalPages)
    {
        nextPage = (int)totalPages;
    }

}

<div class="row-md-4">
    <div class="text-center">
        @if (totalPages > 1)
        {
            <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : "")" asp-controller="Products"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-category="@Model.Category"
           asp-route-size="@Model.Size"
           asp-route-sorting="@((int)Model.Sorting)">
                &lt;
            </a>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <a asp-controller="Products" asp-action="All" asp-route-currentPage="@i">@i</a>
        }
        @if (totalPages > 1)
        {
            <a class="btn btn-primary @(Model.CurrentPage == totalPages ? "disabled" : "")" asp-controller="Products"
           asp-action="All"
           asp-route-currentPage="@nextPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-category="@Model.Category"
           asp-route-size="@Model.Size"
           asp-route-sorting="@((int)Model.Sorting)">
                &gt;
            </a>
        }
    </div>
</div>