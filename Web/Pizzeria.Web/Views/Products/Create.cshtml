@model Pizzeria.Web.ViewModels.Products.CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>@ViewData["Title"]</h1>

<form class="row g-3" method="post">
    <div class="col-md-6">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="SizeId" class="form-label">State</label>
        <select asp-for="SizeId" class="form-select">
            <option selected>Select Size</option>
            @foreach(var size in Model.Sizes)
            {
                <option value="@size.Id">@size.Name</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="CategoryId" class="form-label">State</label>
        <select asp-for="CategoryId" class="form-select">
            <option selected>Select Category</option>
            @foreach(var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


